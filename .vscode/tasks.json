{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build current task",
            "type": "shell",
            "command": "make",
            "args": [
                "-s"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}